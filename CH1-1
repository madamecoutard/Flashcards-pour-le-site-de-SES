    let currentCard = 0;
    let isFlipped = false;

    function updateCard() {
      const text = isFlipped ? cards[currentCard].verso : cards[currentCard].recto;
      document.getElementById("card-text").textContent = text;
      document.getElementById("counter").textContent = `Carte ${currentCard + 1} sur ${cards.length} (${isFlipped ? 'Verso' : 'Recto'})`;
    }

    function flipCard() {
      isFlipped = !isFlipped;
      updateCard();
    }

    function nextCard() {
      if (currentCard < cards.length - 1) {
        currentCard++;
        isFlipped = false;
        updateCard();
      }
    }

    function prevCard() {
      if (currentCard > 0) {
        currentCard--;
        isFlipped = false;
        updateCard();
      }
    }

    updateCard();
